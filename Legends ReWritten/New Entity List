DropsTab.MouseButton1Click:Connect(function()
	HoldersPageLayout:JumpTo(DropsHolder)
	ButtonsPageLayout:JumpTo(DropButtons)

	BossesTab.BorderSizePixel = 0
	DropsTab.BorderSizePixel = 1
